#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'mud'

smooth = ARGV[0]&.to_i || 4
rounds = ARGV[1]&.to_i || 5
size = 100
half = size / 2.0

sphere = Mud::NSphere.new(half, [half, half, half])

scale = 500 / size
renderer = Mud::Renderer::STL.new(scale)
renderer.render(sphere)
