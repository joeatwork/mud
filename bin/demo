#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'mud'

smooth = ARGV[0]&.to_i || 4
rounds = ARGV[1]&.to_i || 5
size = 100
half = size / 2.0

noise = Mud::Forms::Noise.new(size, 11503273040066674494640623225)
circle = Mud::NSphere.new(half, [half, half])
masked = Mud::And.new(noise, circle)

smoothed = Mud::Forms::Smooth.new(masked, smooth, rounds)

scale = 500 / size
renderer = Mud::Renderer::SVG.new(scale)
renderer.render(smoothed)
