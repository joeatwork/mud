#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'mud'

size = ARGV[0]&.to_i || 100
half = size / 2.0

noise = Mud::Noise.new(size)
circle = Mud::Circle.new(half, half, half)
masked = Mud::And.new(noise, circle)

smoothed = Mud::Smooth.new(masked, 4, 5)

scale = 500 / size
renderer = Mud::Renderer.new(scale)
renderer.render(smoothed)
